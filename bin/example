#!/usr/bin/env ruby

require 'bundler/setup'
require 'reline'

stty_save = `stty -g`.chomp

begin
  puts 'This is echo program by Reline.'
  while line = Reline.readline("echo> ", true)
    case line.chomp
    when 'exit', 'quit', 'q'
      exit 0
    when ''
      # NOOP
    else
      puts line
    end
  end
rescue Interrupt
  puts '^C'
  `stty #{stty_save}`
  exit 0
end
puts
